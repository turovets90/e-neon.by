    .products
        .box_title.violet
            .line_top
            .h2 Ассортимент
            .line_bottom
        .row
            -for(var p=1;p<=3;p++)
                .col_4
                    .product_item
                        .product_img
                            picture
                                img(src="img/img1.png")
                        .product_title N2835-1 (12V, 6x12mm)
                        .product_subtitle Кратность реза 3см
                        .colors
                            span Цвета
                            .colors_list
                                -for(var c=1;c<=7;c++)
                                    if c===1
                                        .color_item(style="background: #FFFFFF")
                                    else if c===2
                                        .color_item(style="background: #E5FFAE")
                                    else if c===3
                                        .color_item(style="background: #FF6838")
                                    else if c===4
                                        .color_item(style="background: #5EA9DC")
                                    else if c===5
                                        .color_item(style="background: #39FF4D")
                                    else if c === 6
                                        .color_item(style="background: #FFED15")
                                    else
                                        .color_item(style="background: #FF59FF")

                        .price 160 BYN


